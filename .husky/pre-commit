#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit quality checks..."

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix type errors before committing."
  exit 1
fi

# Run ESLint on staged files
echo "ğŸ”§ Running ESLint on staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix linting errors before committing."
  exit 1
fi

# Run security audit
echo "ğŸ”’ Running security audit..."
npm audit --audit-level high
if [ $? -ne 0 ]; then
  echo "âŒ Security audit found high-risk vulnerabilities. Please fix before committing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test -- --run --reporter=basic
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
