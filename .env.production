# Production Environment Configuration
NODE_ENV=production

# Application Configuration
VITE_APP_NAME="Laser Cutting Calculator"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Professional laser cutting calculator platform with 27 specialized calculators"

# API Configuration
VITE_API_URL="https://api.lasercalc.com"
VITE_API_VERSION="v1"
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_FEEDBACK=true
VITE_ENABLE_MONITORING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics Configuration
VITE_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
VITE_GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"
VITE_HOTJAR_ID="XXXXXXX"

# Performance Configuration
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true
VITE_CACHE_DURATION=86400

# Security Configuration
VITE_ENABLE_CSP=true
VITE_CSP_NONCE="production-nonce"
VITE_ENABLE_SECURITY_HEADERS=true

# SEO Configuration
VITE_SITE_URL="https://lasercalc.com"
VITE_SITE_NAME="Laser Cutting Calculator"
VITE_SITE_DESCRIPTION="Professional laser cutting calculator platform with 27 specialized calculators for cost analysis, time estimation, parameter optimization, and quality control."
VITE_SITE_KEYWORDS="laser cutting,calculator,manufacturing,optimization,cost analysis,time estimation,parameter optimization,quality control"
VITE_SITE_AUTHOR="Laser Cutting Calculator Team"

# Social Media Configuration
VITE_TWITTER_HANDLE="@lasercalc"
VITE_FACEBOOK_PAGE="lasercalc"
VITE_LINKEDIN_PAGE="laser-cutting-calculator"

# Contact Information
VITE_SUPPORT_EMAIL="support@lasercalc.com"
VITE_CONTACT_EMAIL="contact@lasercalc.com"
VITE_SALES_EMAIL="sales@lasercalc.com"

# CDN Configuration
VITE_CDN_URL="https://cdn.lasercalc.com"
VITE_ASSETS_URL="https://assets.lasercalc.com"

# Error Tracking
VITE_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
VITE_ENABLE_ERROR_TRACKING=true

# Build Configuration
VITE_BUILD_TARGET="production"
VITE_ENABLE_SOURCE_MAPS=false
VITE_ENABLE_BUNDLE_ANALYZER=false
