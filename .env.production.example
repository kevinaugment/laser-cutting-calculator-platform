# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application Configuration
NODE_ENV=production
VITE_APP_ENV=production
VITE_APP_NAME="Laser Cutting Calculator"
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=https://api.lasercalc.com
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Database Configuration (Backend)
DATABASE_URL=postgresql://username:password@host:5432/laser_calc_prod
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_CONNECTION_TIMEOUT=30000

# Redis Cache Configuration (Backend)
REDIS_URL=redis://username:password@host:6379
REDIS_DB=0
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=10

# Memory System Configuration
VITE_MEMORY_SYSTEM_ENABLED=true
VITE_MEMORY_SYSTEM_API_URL=https://api.lasercalc.com/memory
MEMORY_SYSTEM_ENCRYPTION_KEY=your-32-character-encryption-key-here
MEMORY_SYSTEM_JWT_SECRET=your-jwt-secret-key-here

# ML Model Configuration
VITE_ML_MODELS_ENABLED=true
VITE_ML_API_URL=https://api.lasercalc.com/ml
ML_MODEL_STORAGE_PATH=/app/models
ML_MODEL_CACHE_SIZE=100
ML_INFERENCE_TIMEOUT=5000

# Security Configuration
VITE_SECURITY_ENABLED=true
SECURITY_ENCRYPTION_ALGORITHM=AES-256-GCM
SECURITY_HASH_ALGORITHM=SHA-256
SECURITY_JWT_EXPIRY=24h
SECURITY_RATE_LIMIT_REQUESTS=1000
SECURITY_RATE_LIMIT_WINDOW=3600

# GDPR Compliance Configuration
VITE_GDPR_ENABLED=true
GDPR_DATA_RETENTION_DAYS=2555  # 7 years
GDPR_COOKIE_CONSENT_REQUIRED=true
GDPR_DATA_EXPORT_FORMAT=json

# Monitoring Configuration
VITE_MONITORING_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# CDN Configuration
VITE_CDN_URL=https://cdn.lasercalc.com
CDN_CACHE_CONTROL=public, max-age=31536000
CDN_COMPRESSION=gzip,br

# Email Configuration (Backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@lasercalc.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@lasercalc.com

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760  # 10MB
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.svg
FILE_STORAGE_PROVIDER=aws-s3
AWS_S3_BUCKET=laser-calc-uploads
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Performance Configuration
VITE_PERFORMANCE_MONITORING=true
PERFORMANCE_CACHE_TTL=300
PERFORMANCE_COMPRESSION=true
PERFORMANCE_MINIFICATION=true

# Feature Flags
VITE_FEATURE_ADVANCED_CALCULATORS=true
VITE_FEATURE_TEAM_COLLABORATION=true
VITE_FEATURE_EXPERT_VALIDATION=true
VITE_FEATURE_MOBILE_OPTIMIZATION=true
VITE_FEATURE_OFFLINE_MODE=false

# Backup Configuration (Backend)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PROVIDER=aws-s3
BACKUP_S3_BUCKET=laser-calc-backups

# Load Balancer Configuration
LOAD_BALANCER_HEALTH_CHECK_PATH=/health
LOAD_BALANCER_TIMEOUT=30
LOAD_BALANCER_RETRY_ATTEMPTS=3

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/lasercalc.com.crt
SSL_KEY_PATH=/etc/ssl/private/lasercalc.com.key
SSL_PROTOCOLS=TLSv1.2,TLSv1.3
SSL_CIPHERS=ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_ROTATION=daily

# CORS Configuration
CORS_ORIGIN=https://lasercalc.com,https://www.lasercalc.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict
SESSION_MAX_AGE=86400000  # 24 hours

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# Third-party Integrations
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Social Authentication
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. Please check back soon."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# Development Tools (Disabled in Production)
VITE_DEVTOOLS_ENABLED=false
VITE_DEBUG_MODE=false
VITE_HOT_RELOAD=false
